<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anderssonvilla.barsocial2.Lugar"
    android:orientation="vertical"
    android:background="#5C6BC0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lugarName"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:background="#5C6BC0"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lugarCategoria"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:background="#5C6BC0"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lugarLocation"
        android:background="#5C6BC0"
        android:layout_gravity="center"
        android:textSize="32sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMoreInfo"
        android:text="Mas Informacion"
        android:layout_gravity="center"
        android:background="#5C6BC0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProducto"
        android:text="Productos"
        android:layout_below="@+id/btnEventos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="#5C6BC0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEventos"
        android:text="Eventos"
        android:layout_below="@+id/btnMoreInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="#5C6BC0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMapas"
        android:text="Ver Mapa"
        android:layout_below="@+id/btnEventos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="#5C6BC0"/>

</LinearLayout>
